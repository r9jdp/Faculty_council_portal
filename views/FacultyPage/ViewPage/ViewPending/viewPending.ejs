<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Approvals</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .navbar {
            height: 80px;
            box-shadow: 1px 1px 5px 1px #888888;
            background-color: white;
            border-bottom-left-radius: 20px;
            border-bottom-right-radius: 20px;
            display: flex;
            align-items: center;
            width: 100%;
            justify-content: space-between;
        }

        .logoutBtn {
            background-color: white;
            color: black;
            border: 5px solid #f44336;
            border-radius: 15px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
            box-shadow: 1px 1px 5px 1px #888888;
            margin-right: 50px;
        }

        .somaiya-logo-main {
            margin-left: 50px;
            height: 80%;
        }

        .navbar a {
            display: flex;
            align-items: center;
            height: 100%;
        }

        .txt {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.2rem;
            height: 8vh;
            margin-top: 1%;
        }

        .filter-btn {
            background-color: #4CAF50;
            color: #fff;
            border: none;
            padding: 5px 10px;
            font-size: 14px;
            cursor: pointer;
            height: 12%;
            width: 15%;
            margin-left: 5%;
        }

        #filter-options-2 label {
            font-size: 1.25rem;
        }

        #filter-options-3 label {
            font-size: 1.3rem;
        }

        .filter-btn img {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 95%;
        }

        .filter-btn:hover {
            background-color: #3e8e41;
        }

        #side-nav {
            position: fixed;
            width: 1.5%;
            margin-top: 1%;
            left: 0;
            padding: 15px;
            background-color: transparent;
            color: black;
            cursor: pointer;
            font-size: 2rem;
            z-index: 100;
        }

        #sidebar {
            z-index: 100;
            height: 100%;
            width: 0;
            position: fixed;
            margin-top: 1%;
            left: 0;
            background-color: #d5c0bb;
            overflow-x: hidden;
            color: black;
            transition: 0.5s;
            padding-top: 60px;
        }

        #sidebar button {
            padding: 10px 15px;
            text-align: left;
            border: none;
            background: none;
            color: black;
            font-size: 18px;
            display: block;
            width: 100%;
            cursor: pointer;
        }

        #sidebar button:hover {
            background-color: #575757;
        }

        a {
            text-decoration: none;
        }

        #overlay-member,
        #overlay-certificate,
        #overlay-activity {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        #overlayContent {
            background: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80%;
            max-width: 600px;
            border: 2px solid #ccc;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .popup-content {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .popup-content div {
            display: flex;
            justify-content: space-between;
        }

        .popup-content span {
            flex-basis: 50%;
            text-align: left;
            padding: 1%;
        }

        .popup-content input,
        .popup-content textarea {
            flex-basis: 50%;
            text-align: right;
            border: none;
            background-color: #f2f2f2;
            padding: 5px;
            border-radius: 5px;
        }

        .popup-content textarea {
            width: 100%;
            height: 80px;
        }

        .popup-content button {
            margin-top: 20px;
            background-color: #f2dede;
            border: none;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
            align-self: center;
            font-size: 16px;
        }

        .closeButton {
            background-color: #f2dede;
            border: none;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 20px;
            align-self: center;
            font-size: 16px;
        }
    </style>
</head>

<body>
    <div class="main">

        <header>
            <div class="navbar">
                <a href="/"><img class="somaiya-logo-main" src="/logo_somaiya.png" alt="somaiya-logo"></a>
                <button type="button"
                    class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-bold rounded-lg text-xl px-8 py-2.5 me-5 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">
                    <a href="/logout">Logout</a>
                </button>
            </div>
        </header>

        <div id="sidebar">
            <a
                href="/faculty/viewCertificates?tenure_id=<%= tenure_id%>&council_id=<%= council_id%>&faculty_id=<%= faculty_id%>"><button
                    class="nav-btn">View Certificate</button></a>
            <a
                href="/faculty/viewMember?tenure_id=<%= tenure_id%>&council_id=<%= council_id%>&faculty_id=<%= faculty_id%>"><button
                    class="nav-btn">View Member</button></a>
            <a
                href="/faculty/viewActivity?tenure_id=<%= tenure_id%>&council_id=<%= council_id%>&faculty_id=<%= faculty_id%>"><button
                    class="nav-btn">View Activity</button></a>
            <a
                href="/faculty/viewPending?tenure_id=<%= tenure_id%>&council_id=<%= council_id%>&faculty_id=<%= faculty_id%>"><button
                    class="nav-btn">View Pending Approvals</button></a>
            <a
                href="/faculty/ViewSummary?tenure_id=<%= tenure_id%>&council_id=<%= council_id%>&faculty_id=<%= faculty_id%>"><button
                    class="nav-btn">Summary</button></a>
        </div>

        <div id="side-nav">
            <span onclick="toggleNav()">&#9776;</span>
        </div>

        <div class="content">

            <div class="txt">
                <h1 class="font-bold text-3xl">Pending Approvals</h1>
            </div>

            <div class="table-container m-10">
                <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                    <div class="py-3 px-4">
                        <div class="relative max-w-xs">
                            <label for="hs-table-search" class="sr-only">Search</label>
                            <input type="text" name="hs-table-search" id="hs-table-search search-container"
                                class="py-2 px-3 ps-9 block w-full border-gray-200 shadow-sm rounded-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                                placeholder="Search for items">
                            <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none ps-3">
                                <svg class="size-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" width="24"
                                    height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <path d="m21 21-4.3-4.3"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <table class="w-full text-sm text-left rtl:text-right text-gray-500">
                        <thead class="text-sm text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3">
                                    Name
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Type
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Status
                                </th>
                                <th scope="col" class="px-6 py-3">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% members.forEach(member=> { %>
                                <tr class="bg-white border-b hover:bg-gray-50">
                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                        <%= member.first_name %>
                                            <%= member.last_name %>
                                    </th>
                                    <td class="px-6 py-4">
                                        Member
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= member.approval_status %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <button type="button"
                                            class="inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-blue-600 hover:text-blue-800 focus:outline-none focus:text-blue-800 disabled:opacity-50 disabled:pointer-events-none viewButton"
                                            data-type="Member" data-firstname="<%= member.first_name %>"
                                            data-lastname="<%= member.last_name %>"
                                            data-designation="<%= member.designation %>"
                                            data-branch="<%= member.branch %>" data-year="<%= member.academic_year %>"
                                            data-rollno="<%= member.roll_number %>" data-email="<%= member.email %>"
                                            data-contact="<%= member.contact %>">View</button>
                                    </td>
                                </tr>
                                <% }); %>

                                    <% certificates.forEach(certificate=> { %>
                                        <tr class="bg-white border-b hover:bg-gray-50">
                                            <th scope="row"
                                                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                                <%= certificate.name_of_certificate %>
                                            </th>
                                            <td class="px-6 py-4">
                                                Certificate
                                            </td>
                                            <td class="px-6 py-4">
                                                <%= certificate.approval_status %>
                                            </td>
                                            <td class="px-6 py-4">
                                                <button type="button"
                                                    class="inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-blue-600 hover:text-blue-800 focus:outline-none focus:text-blue-800 disabled:opacity-50 disabled:pointer-events-none viewButton"
                                                    data-type="Certificate"
                                                    data-certificatename="<%= certificate.name_of_certificate %>"
                                                    data-startdate="<%= certificate.start_date_of_certificate.toISOString().split('T')[0] %>"
                                                    data-enddate="<%= certificate.end_date_of_certificate.toISOString().split('T')[0] %>"
                                                    data-issuedby="<%= certificate.issue_by %>"
                                                    data-certificatetype="<%= certificate.certificate_type %>"
                                                    data-level="<%= certificate.level %>"
                                                    data-description="<%= certificate.certificate_description %>">View</button>
                                            </td>
                                        </tr>
                                        <% }); %>

                                            <% activities.forEach(activity=> { %>
                                                <tr class="bg-white border-b hover:bg-gray-50">
                                                    <th scope="row"
                                                        class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                                        <%= activity.name_of_activity %>
                                                    </th>
                                                    <td class="px-6 py-4">
                                                        Activity
                                                    </td>
                                                    <td class="px-6 py-4">
                                                        <%= activity.approval_status %>
                                                    </td>
                                                    <td class="px-6 py-4">
                                                        <button type="button"
                                                            class="inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent text-blue-600 hover:text-blue-800 focus:outline-none focus:text-blue-800 disabled:opacity-50 disabled:pointer-events-none viewButton"
                                                            data-type="Activity"
                                                            data-activitytype="<%= activity.activity_type %>"
                                                            data-activityname="<%= activity.name_of_activity %>"
                                                            data-organizers="<%= activity.name_of_the_organizer %>"
                                                            data-startdate="<%= activity.start_date_of_activity.toISOString().split('T')[0] %>"
                                                            data-enddate="<%= activity.end_date_of_activity.toISOString().split('T')[0] %>"
                                                            data-audience="<%= activity.target_audience %>"
                                                            data-hours="<%= activity.no_of_hours %>"
                                                            data-participants="<%= activity.no_of_participants %>"
                                                            data-description="<%= activity.description %>">View</button>
                                                    </td>
                                                </tr>
                                                <% }); %>
                        </tbody>

                    </table>

                </div>

            </div>


            <div id="overlay-member">
                <div id="overlayContent">
                    <div class="popup-content">
                        <div>
                            <span>First Name</span>
                            <span id="firstName"></span>
                        </div>
                        <div>
                            <span>Last Name</span>
                            <span id="lastName"></span>
                        </div>
                        <div>
                            <span>Designation</span>
                            <span id="designation"></span>
                        </div>
                        <div>
                            <span>Branch</span>
                            <span id="branch"></span>
                        </div>
                        <div>
                            <span>Year</span>
                            <span id="year"></span>
                        </div>
                        <div>
                            <span>Roll No.</span>
                            <span id="rollNo"></span>
                        </div>
                        <div>
                            <span>Email ID</span>
                            <span id="email"></span>
                        </div>
                        <div>
                            <span>Contact No.</span>
                            <span id="contact"></span>
                        </div>
                        <button class="closeButton" onclick="closeOverlay('member')">✖ Close</button>
                    </div>
                </div>
            </div>

            <div id="overlay-certificate">
                <div id="overlayContent">
                    <div class="popup-content">
                        <div>
                            <span>Certificate Name</span>
                            <input id="certificateName" readonly>
                        </div>
                        <div>
                            <span>Name of Participant(s)</span>
                            <input id="participantName" readonly>
                        </div>
                        <div>
                            <span>Start Date</span>
                            <input id="startDate" readonly>
                            <span>End Date</span>
                            <input id="endDate" readonly>
                        </div>
                        <div>
                            <span>Issued By</span>
                            <input id="issuedBy" readonly>
                        </div>
                        <div>
                            <span>Certificate Type</span>
                            <input id="certificateType" readonly>
                        </div>
                        <div>
                            <span>Level</span>
                            <input id="level" readonly>
                        </div>
                        <div>
                            <span>Description</span>
                            <textarea id="description" readonly></textarea>
                        </div>
                        <div>
                            <button id="viewCertificate">Certificate</button>
                            <button id="viewPhotos">Photos</button>
                        </div>
                        <button class="closeButton" onclick="closeOverlay('certificate')">✖ Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="overlay-activity">
            <div id="overlayContent">
                <div class="popup-content">
                    <div>
                        <span>Activity type:</span>
                        <input id="activityType" readonly>
                    </div>

                    <div>
                        <span>Activity Name:</span>
                        <input id="ActivityName" readonly>
                    </div>
                    <div>
                        <span>Name of Organizing Students/Councils </span>
                        <input id="Organizers" readonly>
                    </div>
                    <div>
                        <span>Start Date</span>
                        <input id="startDate" readonly>
                        <span>End Date</span>
                        <input id="endDate" readonly>
                    </div>

                    <div>
                        <span>Target Audience: </span>
                        <input id="Audience" readonly>
                    </div>

                    <div>
                        <span>No of Hours</span>
                        <input id="Hours" readonly>
                    </div>


                    <div>
                        <span>No of Participants</span>
                        <input id="Participants" readonly>
                    </div>

                    <div>
                        <span>Description</span>
                        <textarea id="description" readonly></textarea>
                    </div>
                    <div>
                        <button id="viewCertificate">Pamphlets</button>
                        <button id="viewPhotos">Photos</button>
                    </div>
                    <button class="closeButton" onclick="closeOverlay('activity')">✖ Close</button>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script>
        let sidebarOpen = false;


        function toggleNav() {
            if (sidebarOpen) {
                document.getElementById("sidebar").style.width = "0";
                sidebarOpen = false;
            } else {
                document.getElementById("sidebar").style.width = "250px";
                sidebarOpen = true;
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            const viewButtons = document.querySelectorAll('.viewButton');
            const overlays = {
                'Member': document.getElementById('overlay-member'),
                'Certificate': document.getElementById('overlay-certificate'),
                'Activity': document.getElementById('overlay-activity')
            };

            viewButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const type = button.getAttribute('data-type');
                    const overlay = overlays[type];

                    // Close any currently open overlay
                    Object.values(overlays).forEach(overlay => overlay.style.display = 'none');

                    // Populate the overlay with data
                    if (overlay) {
                        populateOverlay(type, button);
                        overlay.style.display = 'flex';
                    }
                });
            });

            function populateOverlay(type, button) {
                switch (type) {
                    case 'Member':
                        document.getElementById('firstName').textContent = button.getAttribute('data-firstname');
                        document.getElementById('lastName').textContent = button.getAttribute('data-lastname');
                        document.getElementById('designation').textContent = button.getAttribute('data-designation');
                        document.getElementById('branch').textContent = button.getAttribute('data-branch');
                        document.getElementById('year').textContent = button.getAttribute('data-year');
                        document.getElementById('rollNo').textContent = button.getAttribute('data-rollno');
                        document.getElementById('email').textContent = button.getAttribute('data-email');
                        document.getElementById('contact').textContent = button.getAttribute('data-contact');
                        break;

                    case 'Certificate':
                        document.getElementById('certificateName').value = button.getAttribute('data-certificatename');
                        document.getElementById('startDate').value = button.getAttribute('data-startdate');
                        document.getElementById('endDate').value = button.getAttribute('data-enddate');
                        document.getElementById('issuedBy').value = button.getAttribute('data-issuedby');
                        document.getElementById('certificateType').value = button.getAttribute('data-certificatetype');
                        document.getElementById('level').value = button.getAttribute('data-level');
                        document.getElementById('description').value = button.getAttribute('data-description');
                        break;

                    case 'Activity':
                        document.getElementById('activityType').value = button.getAttribute('data-activitytype');
                        document.getElementById('ActivityName').value = button.getAttribute('data-activityname');
                        document.getElementById('Organizers').value = button.getAttribute('data-organizers');
                        document.getElementById('startDate').value = button.getAttribute('data-startdate');
                        document.getElementById('endDate').value = button.getAttribute('data-enddate');
                        document.getElementById('Audience').value = button.getAttribute('data-audience');
                        document.getElementById('Hours').value = button.getAttribute('data-hours');
                        document.getElementById('Participants').value = button.getAttribute('data-participants');
                        document.getElementById('description').value = button.getAttribute('data-description');
                        break;
                }
            }

            function closeOverlay(overlayType) {
                if (overlays[overlayType]) {
                    overlays[overlayType].style.display = 'none';
                }
            }

            // Attach close functionality to each overlay
            Object.keys(overlays).forEach(key => {
                const overlay = overlays[key];
                const closeButton = overlay.querySelector('.closeButton');
                if (closeButton) {
                    closeButton.addEventListener('click', () => closeOverlay(key));
                }

                overlay.addEventListener('click', function (event) {
                    if (event.target === overlay) {
                        closeOverlay(key);
                    }
                });
            });
        });


    </script>
</body>

</html>